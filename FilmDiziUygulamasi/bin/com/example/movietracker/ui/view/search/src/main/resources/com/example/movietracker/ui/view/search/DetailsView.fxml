<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.movietracker.ui.view.search.DetailsController"
            prefWidth="620" prefHeight="420"
            style="-fx-padding: 16;">
    <left>
        <ImageView fx:id="posterView" fitWidth="250" preserveRatio="true"/>
    </left>
    <center>
        <VBox spacing="8" style="-fx-padding: 0 0 0 16;">
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="metaLabel" />
            <TextArea fx:id="overviewArea" wrapText="true" editable="false" prefRowCount="12"/>
        </VBox>
    </center>
</BorderPane>
